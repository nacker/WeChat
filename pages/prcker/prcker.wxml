<view class="weui-article">
    <view class="section">
        <view class="section_title">
            地区选择器
        </view>
        <picker bindchange="bindpicker" value="{{index}}" range="{{array}}">
            <view class="picker">
                当前选择:{{array[index]}}
            </view>
        </picker>
    </view>
    <view class="section">
        <view class="section_title">
            时间选择器
        </view>
        <picker mode='time' value="{{time}}" start="08:1" end="23:00" bindchange="bindtime">
            <view class="picker">
                当前选择:{{time}}
            </view>
        </picker>
    </view>
    <view class="section">
         <view class="section_title">
            日期选择器
        </view>
        <picker mode="date" value="{{data}}" start="2015-09-01" end="2017-09-01" bindchange="binddate">
            <view class="picker">
                当前选择:{{date}}
            </view>
        </picker>
    </view>
</view>